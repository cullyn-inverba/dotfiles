# Based on Bridge by ScionicSpectre and Adwaita by GNOME
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK 2 version of Materia. It's whole purpose is to look as the
# GTK 3 version as much as possible until GTK 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "base_color:#1f1f1f"
gtk-color-scheme = "text_color:#e0e0e0"
# Foreground/background
gtk-color-scheme = "bg_color:#1f1f1f"
gtk-color-scheme = "fg_color:#e0e0e0"
# Selected foreground/background
gtk-color-scheme = "selected_bg_color:#f5b17a"
gtk-color-scheme = "selected_fg_color:#1f1f1f"
# Titlebar foreground/background
gtk-color-scheme = "titlebar_bg_color:#1f1f1f"
gtk-color-scheme = "titlebar_fg_color:#e0e0e0"
# Menus
gtk-color-scheme = "menu_color:#1f1f1f"
# Tooltips foreground/background
gtk-color-scheme = "tooltip_bg_color:#1f1f1f"
gtk-color-scheme = "tooltip_fg_color:#e0e0e0"
# Links
gtk-color-scheme = "link_color:#99e09b"
gtk-color-scheme = "visited_link_color:#496b4a"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
