[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:01.1/0000:01:00.0/hwmon/hwmon0/temp1_input
units = true
format-padding = 1

base-temperature = 25
thermal-zone = 0
warn-temperature = 69

format = <ramp>  <label> 
format-warn = <ramp> <label-warn> 

label = %temperature-c%
label-warn = " %temperature-c%"
label-warn-foreground = ${colors.warn}

ramp-0 = "%{F#5f89f5}%{F-}"
ramp-1 = "%{F#b0d0eb}%{F-}"
ramp-2 = "%{F#eb4972}﨏%{F-}"
ramp-foreground = ${colors.foreground}
ramp-font = 5

; ╔╦╗┌─┐┌┬┐┌─┐
;  ║║├─┤ │ ├┤ 
; ═╩╝┴ ┴ ┴ └─┘
[module/date]
type = internal/date
interval = 1
format = %{F#7abef5}%{T7}%{T-}%{F-}  <label>

date = "%{T2}%A, %B %d%{T-}"
time = "%{T3}%H:%M%{T-}"

; date-alt = "%m-%d-%y"
; time-alt = "%H:%M:%S" 

label-background = ${colors.background}
label-foreground = ${colors.foreground}
label = %date%   %{F#7abef5}%{T13}%{T-}%{F-}  %time%