[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.sub}
format-margin = 1
format-font = 5

hook-0 = echo "%{A1:notify-send "DUNST_COMMAND_PAUSE" && polybar-msg hook dunst 2:}  %{A}" &
hook-1 = echo "%{A1:notify-send "DUNST_COMMAND_RESUME" && polybar-msg hook dunst 1:}%{F#4f4f4f}  %{A}" &

